<h1>Skate Park</h1>

<div class="py-4">
  <h2>Registro</h2>
  <hr />

  <form action="/upload" method="POST" enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input name="email" class="form-control m-auto" required type="email" size="50" minlength="6"
          pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input name="name" class="form-control m-auto" required type="text" size="25" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input name="password1" class="form-control m-auto" required type="password" size="25" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input name="password2" class="form-control m-auto" required type="password" size="25" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input name="anos_exp" class="form-control m-auto" required type="number" min="0" max="60" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input name="especialidad" class="form-control m-auto" required type="text" size="50" />
      </div>
      <div class="form-group col-12 col-sm-12">
        <label>Foto de perfil</label>
        <input type="file" id="foto" name="foto" accept="image/*" required />
      </div>
    </div>
    <button type="submit" class="btn btn-info mb-3">Registrarme</button>
    <p><a href="/login"> Iniciar sesión</a></p>
  </form>
</div>